---
const props = Astro.props as Record<string, never>;
---
<div class="grid gap-6 md:grid-cols-[1.1fr_1fr]">
  <!-- Fancy card with info -->
  <aside class="card p-6">
    <h3 class="text-lg font-semibold">Let’s build something great</h3>
    <p class="mt-2 opacity-90 text-sm/6">
      Tell me briefly about your project, timeline, and goals. I’ll reply within 1–2 business days.
    </p>

    <ul class="mt-4 space-y-2 text-sm/6 opacity-90">
      <li class="flex items-center gap-2">
        <span class="inline-grid place-items-center size-7 rounded-full bg-white/10">✉️</span>
        jcalleros1009@gmail.com
      </li>
      <li class="flex items-center gap-2">
        <span class="inline-grid place-items-center size-7 rounded-full bg-white/10">🌎</span>
        Based in Mexico • Remote-friendly
      </li>
      <li class="flex items-center gap-2">
        <span class="inline-grid place-items-center size-7 rounded-full bg-white/10">⏱️</span>
        Typical response: <strong>24–48h</strong>
      </li>
    </ul>
  </aside>

  <!-- Form card -->
  <form id="contact-form" method="post" action="/api/contact" class="card p-6 space-y-4">
    <input type="hidden" name="_hp" value="">       <!-- honeypot -->
    <input type="hidden" name="_ts" value="">       <!-- timestamp set on mount -->

    <div>
      <label class="block text-sm mb-1" for="name">Name</label>
      <div class="relative">
        <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 opacity-70">👤</span>
        <input id="name" name="name" required
          class="w-full rounded-md bg-white/5 px-9 py-2 ring-1 ring-white/10 focus:ring-2 focus:ring-[--color-accent]"
          placeholder="Your name" />
      </div>
    </div>

    <div>
      <label class="block text-sm mb-1" for="email">Email</label>
      <div class="relative">
        <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 opacity-70">📧</span>
        <input id="email" name="email" type="email" required
          class="w-full rounded-md bg-white/5 px-9 py-2 ring-1 ring-white/10 focus:ring-2 focus:ring-[--color-accent]"
          placeholder="you@company.com" />
      </div>
    </div>

    <div>
      <label class="block text-sm mb-1" for="message">Message</label>
      <div class="relative">
        <span class="pointer-events-none absolute left-3 top-3 opacity-70">💬</span>
        <textarea id="message" name="message" rows="6" required
          class="w-full rounded-md bg-white/5 px-9 py-2 ring-1 ring-white/10 focus:ring-2 focus:ring-[--color-accent]"
          placeholder="Tell me about your project, goals, and timelines."></textarea>
      </div>
    </div>

    <div class="flex items-center justify-between gap-3">
      <p class="text-xs opacity-70">Protected with honeypot & time-check. No CAPTCHA needed.</p>
      <button class="btn btn-primary" id="send-btn" type="submit">
        <span class="inline-flex items-center gap-2">
          <svg class="size-4" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M3 6l18 6-18 6 6-6-6-6z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          </svg>
          Send
        </span>
      </button>
    </div>

    <!-- inline alerts -->
    <div id="form-alert" class="hidden rounded-md border px-3 py-2 text-sm"></div>
  </form>
</div>

<script>
  const form = document.getElementById("contact-form");
  const alertBox = document.getElementById("form-alert");
  const btn = document.getElementById("send-btn");

  // set timestamp for anti-bot
  const ts = form.querySelector('input[name="_ts"]');
  ts.value = Date.now().toString();

  function setAlert(kind, msg) {
    alertBox.className = "rounded-md border px-3 py-2 text-sm " +
      (kind === "ok" ? "border-emerald-400/40 bg-emerald-400/10 text-emerald-200" :
                       "border-red-400/40 bg-red-400/10 text-red-200");
    alertBox.textContent = msg;
    alertBox.classList.remove("hidden");
  }

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    alertBox.classList.add("hidden");

    const fd = new FormData(form);
    const plain = Object.fromEntries(fd.entries());

    // simple UI loader
    btn.disabled = true;
    const old = btn.innerHTML;
    btn.innerHTML = '<span class="inline-flex items-center gap-2"><svg class="size-4 animate-spin" viewBox="0 0 24 24"><circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="3" fill="none" opacity=".25"/><path d="M21 12a9 9 0 0 1-9 9" stroke="currentColor" stroke-width="3" fill="none"/></svg> Sending…</span>';

    try {
      const res = await fetch(form.action, { method: "POST", body: fd });
      const json = await res.json();
      if (json.ok) {
        setAlert("ok", "Thanks! Your message has been sent.");
        form.reset();
        ts.value = Date.now().toString();
      } else {
        setAlert("err", "Sorry—there was a problem. Please try again.");
      }
    } catch (err) {
      setAlert("err", "Network error—please try again.");
    } finally {
      btn.disabled = false;
      btn.innerHTML = old;
    }
  });
</script>
